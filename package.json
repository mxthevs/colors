{
  "name": "colors",
  "version": "0.0.2",
  "license": "MIT",
  "esy": {
    "build": [
      "dune build -p #{self.name}"
    ],
    "release": {
      "bin": [
        "colors"
      ]
    }
  },
  "scripts": {
    "watch": "dune build -p #{self.name} -w",
    "test": "esy dune build @test/runtest -f",
    "test:watch": "esy dune build @test/runtest -f -w",
    "clean": "rm -rf esy.lock _esy"
  },
  "dependencies": {
    "ocaml": "4.12.x",
    "@opam/dune": "*",
    "@opam/cmdliner": "*",
    "@opam/notty": "*"
  },
  "devDependencies": {
    "@opam/merlin": "*",
    "@opam/ocaml-lsp-server": "*",
    "@opam/ocamlformat": "*",
    "@opam/ocamlformat-rpc": "*",
    "@opam/utop": "*",
    "@opam/alcotest": "*"
  }
}
